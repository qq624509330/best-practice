<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.spldeolin.bestpractice.mapper.UserMapper">

    <select id="list" resultType="io.spldeolin.bestpractice.po.UserPo">
        SELECT *
        FROM user
        WHERE remove_time IS NULL
    </select>

    <insert id="insert" parameterType="Date">
        INSERT INTO user
        (insert_time)
        VALUE (#{insert_time})
    </insert>

    <select id="getUserByNickname" parameterType="String" resultType="io.spldeolin.bestpractice.po.UserPo">
        SELECT *
        FROM user
        WHERE remove_time IS NULL
        AND nickname = #{nickname}
    </select>


    <select id="getUserByPassword" parameterType="String" resultType="io.spldeolin.bestpractice.po.UserPo">
        SELECT *
        FROM user
        WHERE remove_time IS NULL
        AND password = #{password}
    </select>

    <insert id="insertUser" parameterType="Map">
        INSERT INTO user
        (insert_time, password, nickname)
        VALUE (#{map.insert_time}, #{map.password}, #{map.nickname})
    </insert>

</mapper>